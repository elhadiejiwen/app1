{% extends 'base.html.twig' %}

{% block title %}Personnes{% endblock %}
{% block montitre %} Voici la liste des Personnes{% endblock %}

{% block body %}
{% for per in personne %}
    <h2 class="border-bottom border-primary"><a href="{{path('affiche_personne', {'id': per.id})}}"> {{per.nom| capitalize}}</a></h2>
    <h3>Liste des animaux:</h3> 
    {% for dispo in per.disposes %}
         <div class="row align-items-center">
             <div class="col-2">
                 <img src="{{asset('image/' ~ dispo.animaux.image)}}" alt="" class="img-fluid">
             </div>
             <div class="col">
                 <div> Nom: <a href="{{path('animal_info', {'id': dispo.animaux.id})}}">{{dispo.animaux.nom}}</a> </div>
                 <div> nombre: {{dispo.nb}}</div>
             </div>
         </div>
    {% endfor %}
    


 {% endfor %}
{% endblock %}
